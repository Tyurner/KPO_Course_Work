<div class="text-center">
    <h2 class="display-4">Вход в приложение</h2>
</div>
<br/>
<p class="text-center">
    <a asp-action="Register">Зарегистрироваться</a>
</p>
@if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
{
<script>
    alert('@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(TempData["ErrorMessage"].ToString()))');
</script>
}
<form method="post">
    <div class="row">
        <div class="col-5 text-end">Логин:</div>
        <div class="col-7"><input type="text" name="login" /></div>
    </div>
    <br/>
    <div class="row">
        <div class="col-5 text-end">Пароль:</div>
        <div class="col-7"><input type="password" name="password" /></div>
    </div>
    <br/>
    <div class="row">
        <div class="text-center"><input type="submit" value="Вход" class="btn btn-primary" /></div>
    </div>
</form>